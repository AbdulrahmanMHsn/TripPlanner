<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F4F4"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:background="#F9EA85"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_txtVW_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:text="@string/edit_trip"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/editTrip_img_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/arrow_left"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="26sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="-100dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_item_subject"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/editTrip_edTxtVw_tripName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/background_put_subject"
                        android:hint="@string/trip_name"
                        android:inputType="text"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="#B5B5B5"
                        tools:ignore="Autofill,LabelFor,RtlSymmetry" />

                    <TextView
                        android:id="@+id/editTrip_edTxtVw_tripStartPoint"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/background_put_subject"
                        android:drawableRight="@drawable/ic_search"
                        android:gravity="start|center"
                        android:hint="@string/start_point"
                        android:inputType="text"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="#B5B5B5"
                        tools:ignore="Autofill,LabelFor,RtlSymmetry" />

                    <TextView
                        android:id="@+id/editTrip_edTxtVw_tripEndPoint"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/background_put_subject"
                        android:drawableRight="@drawable/ic_search"
                        android:gravity="start|center"
                        android:hint="@string/end_point"
                        android:inputType="text"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="#B5B5B5"
                        tools:ignore="Autofill,LabelFor,RtlSymmetry" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/editTrip_edTxtVw_tripDate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_put_subject"
                            android:gravity="start|center"
                            android:hint="@string/tripDate"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@android:color/black"
                            android:textColorHint="#B5B5B5"
                            tools:ignore="Autofill,LabelFor,RtlSymmetry" />

                        <TextView
                            android:id="@+id/editTrip_edTxtVw_tripTime"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/background_put_subject"
                            android:gravity="start|center"
                            android:hint="@string/tripTime"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@android:color/black"
                            android:textColorHint="#B5B5B5"
                            tools:ignore="Autofill,LabelFor,RtlSymmetry" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="16dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <CheckBox
                            android:id="@+id/editTrip_chBox_rounded"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="@string/rounded_direction" />

                        <Spinner
                            android:id="@+id/editTrip_spn_choose"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>


                </LinearLayout>


            </ScrollView>

        </LinearLayout>

        <Button
            android:id="@+id/editTrip_btn_save"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/background_btn_create"
            android:text="@string/edit"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="22sp" />

        <Button
            android:id="@+id/editTrip_btn_close"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/background_btn_cancel"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="22sp" />

    </LinearLayout>

</layout>